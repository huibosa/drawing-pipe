FROM oven/bun:1 AS builder

WORKDIR /app

COPY frontend/package.json frontend/bun.lock* ./

RUN bun install

COPY frontend/ ./

RUN bun run build

FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
